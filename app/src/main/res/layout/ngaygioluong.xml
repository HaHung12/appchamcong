<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="0dp">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#121212">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tạo công việc mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo mới"
            android:textSize="16sp"
            android:textColor="#2979FF" />
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ngày bắt đầu công việc -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày bắt đầu công việc *"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/btn_continue_bg"
                android:paddingHorizontal="12dp">

                <EditText
                    android:id="@+id/etNgayBatDau"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="01/10/2024"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:focusable="false"
                    android:clickable="false"
                    android:inputType="none" />

                <ImageView
                    android:id="@+id/icCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/lich"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Thời gian nhắc nhở chấm công -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian nhắc nhở chấm công"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/btn_continue_bg"
                android:paddingHorizontal="12dp">

                <EditText
                    android:id="@+id/etThoiGian"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="19:15"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:focusable="false"
                    android:clickable="false"
                    android:inputType="none" />

                <ImageView
                    android:id="@+id/icTime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/clock"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

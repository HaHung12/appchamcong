<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="#1E1E1E">

        <TextView
            android:id="@+id/tvtdong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvnoidung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo công việc mới"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvttieptuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textColor="#1E88E5"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nhập tên công việc -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc *"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTenCongViec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nhập tên công việc"
                android:background="#C1BBBB"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"/>

            <!-- Hình thức chấm công -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình thức chấm công *"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Option 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/option_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chấm công theo ngày"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả: chấm cả ngày, chấm nửa ngày..."
                            android:textColor="#B0B0B0"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbNgay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Option 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/option_bg"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chấm công theo ca"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả: chấm ca sáng, ca chiều, ca tối..."
                            android:textColor="#B0B0B0"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbCa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Option 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/option_bg"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chấm công theo giờ"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả: thời gian vào làm, tan làm..."
                            android:textColor="#B0B0B0"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rbGio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
